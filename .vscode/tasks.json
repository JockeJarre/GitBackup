{
	"version": "2.0.0",
	"tasks": [
		{
			"label": "build",
			"command": "dotnet",
			"type": "process",
			"args": [
				"build",
				"${workspaceFolder}/GitBackup.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "publish",
			"command": "dotnet",
			"type": "process",
			"args": [
				"publish",
				"${workspaceFolder}/GitBackup.csproj",
				"/property:GenerateFullPaths=true",
				"/consoleloggerparameters:NoSummary;ForceNoAlign"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "watch",
			"command": "dotnet",
			"type": "process",
			"args": [
				"watch",
				"run",
				"--project",
				"${workspaceFolder}/GitBackup.csproj"
			],
			"problemMatcher": "$msCompile"
		},
		{
			"label": "Run GitBackup",
			"type": "shell",
			"command": "dotnet run",
			"args": [
				"--",
				"--help"
			],
			"group": "build"
		},
		{
			"label": "Run GitBackup Help",
			"type": "shell",
			"command": "dotnet",
			"args": [
				"run",
				"--",
				"--help"
			],
			"group": "build"
		}
	]
}